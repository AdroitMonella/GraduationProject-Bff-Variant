{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Oidc": {
    "ClientId": "sipsterclient",
    "ClientSecret": "secret",
    "Authority": "https://localhost:5001",
    "Scopes": [
      "openid",
      "profile",
      "offline_access"
    ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api1": {
        "ClusterId": "api1",
        "Match": {
          "Path": "/api/{*any}"
        }
      }
    },
    "Clusters": {
      "api1": {
        "Destinations": {
          "api1": {
            "Address": "http://localhost:8080/"
          }
        }
      }
    }
  }
}